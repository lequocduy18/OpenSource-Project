    <script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        ScrollReveal({
            reset: true,
            distance: '60px',
            duration: 2000,
            delay: 400
        })

        ScrollReveal().reveal('.main-title, .second-title', { delay: 500, origin: 'left' });
        ScrollReveal().reveal('.sec-01 .image, .info', { delay: 600, origin: 'bottom' });
        ScrollReveal().reveal('.text-box', { delay: 700, origin: 'top' });

        ScrollReveal().reveal('.sec-02 .image, .sec-03 .image', { delay: 600, origin: 'top' });

        ScrollReveal().reveal('.bypass-info li', { delay: 500, origin: 'left', interval: 80 });
        ScrollReveal().reveal('.member-item', { delay: 500, origin: 'bottom', interval: 200 });

    </script>
